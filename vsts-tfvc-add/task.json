{
    "id": "2ef90ef1-5298-4f6a-8b99-12933fed4de4",
    "name": "TFVCAdd",
    "friendlyName": "TFVC - Add new files",
    "description": "Adds file to Pending changes.",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Jesse Houwing",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 1

    },
    "minimumAgentVersion": "1.83.0",


    "groups": [
        {
            "name": "confirmationOptions",
            "displayName": "Please confirm",
            "isExpanded": true
        },
        {
            "name": "configurationOptions",
            "displayName": "Configuration",
            "isExpanded": true
        }
    ],

    "inputs": [
        {
            "name": "ConfirmUnderstand",
            "type": "boolean",
            "label": "I understand checking in files during build is generally a bad idea",
            "defaultValue": false,
            "groupName": "confirmationOptions"
        },
        {
            "name": "ItemSpec",
            "type": "multiLine",
            "label": "Files to check in",
            "defaultValue": "$/",
            "required": false,
            "groupName": "configurationOptions"
        },
        {
            "name": "Recursive",
            "type": "boolean",
            "label": "Recursive",
            "defaultValue": "false",
            "required": false,
            "groupName": "configurationOptions"
        },
        {
            "name": "ApplyLocalitemExclusions",
            "type": "boolean",
            "label": "Apply Localitem Exclusions",
            "defaultValue": "true",
            "required": false,
            "groupName": "configurationOptions"
        }
    ],
    "instanceNameFormat": "Adding pending changes",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\TfvcAdd.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(Build.SourcesDirectory)"
        }
    }
}
